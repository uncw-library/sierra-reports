<script>
    $(document).ready(function(){
        $('#summon-deletes').DataTable({
          dom: 'Bfrtip',
          buttons: [
              'pageLength', 'copy', 'csv', 'excel', 'pdf', 'print'
          ],
          "order": [[ 0, "desc" ]]
        });
        $('.datepicker').datepicker();
    });
</script>

<div class="row justify-content-center">
    <div class="col-auto">
        <h1>{{title}}</h1>
    </div>
</div>

<form method="GET">
    <div class="row justify-content-center">
        <div class="col-auto">
            <input class="form-control datepicker" type="text" name="startDate" value="{{startDate}}" />
        </div>
        <div class="col-auto">
            <label><strong>through</strong></label>
        </div>
        <div class="col-auto">
            <input class="form-control datepicker" type="text" name="endDate" value="{{endDate}}" />
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-auto">
            <input type="submit" value="Filter" class="btn btn-primary"/>
        </div>
    </div>
</form>

<div class="col-12">
    <table id="summon-deletes" class="table table-bordered">
        <thead>
            <th>Deleted Record Date</th>
            <th>Deleted Record Count</th>
        </thead>
        <tbody>
            {{#each result}}
                <tr>
                  <td><a href='/summon-deletes/{{formatDate this.deletion_date_gmt}}'>{{formatDate this.deletion_date_gmt}}</a></td>
                  <td>{{this.count}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>
