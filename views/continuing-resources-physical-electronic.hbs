<script>
    $(document).ready(function(){
        $('#continuing-resources-physical').DataTable({
            "iDisplayLength": 50,
            dom: 'Bfrtip',
            buttons: [
                'pageLength', 'copy', 'csv', 'excel', 'pdf', 'print'
            ]
        });
        $('.datepicker').datepicker();

        $(function(){
            $("#yearSelect").change(function(){
            window.location='?year=' + this.value
            });
        });
    });
</script>

<div class="row justify-content-center">
    <div class="col-auto">
        <h1>{{title}}</h1>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-auto">
        <a href="/continuing-resources/main">Main view</a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-auto">
        <div class="form-group" style="text-align:center">
        <label for="yearSelect">Choose year:</label>
        <select class="form-control" id="yearSelect">
            {{#each years}}
                <option value="{{this}}" {{#if (isSelectedYear this ../selectedYear)}}selected{{/if}}>Fiscal Year {{previousYear this}}/{{this}}</option>
            {{/each}}
        </select>
        </div>
    </div>
</div>

<div class="col-12">
    <table id="continuing-resources-physical" class="table table-bordered">
        <thead>
            <th>Title</th>
            <th>Name</th>
            <th>Order Record</th>
            <th>Name</th>
            <th>Amount Paid</th>
            <th>Invoice Date</th>
            <th>Vendor code</th>
        </thead>
        <tbody>
            {{#each result}}
                 <tr>
                    <td>{{this.best_title}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.order_record}}</td>
                    <td>{{this.replace}}</td>
                    <td>${{this.amt_paid}}</td>
                    <td>{{formatDate this.to_char}}</td>
                    <td><a href="/continuing-resources/electronic/{{this.vendor_record_code}}">{{this.vendor_record_code}}</a></td>
                    
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<div class="row justify-content-center">
    <div class="col-auto">
        <a href="/dashboard">Dashboard</a>
    </div>
</div>
